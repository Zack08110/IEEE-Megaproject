<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelfDefense">

    <Button
        android:id="@+id/sd_vid"
        android:layout_width="285dp"
        android:layout_height="87dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="56dp"
        android:text="Youtube links"
        android:background="@drawable/custom_button"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sd_show_class"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sd_regis"
        android:layout_width="278dp"
        android:layout_height="80dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="202dp"
        android:text="Make a class"
        android:background="@drawable/custom_button"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sd_show_class" />

    <Button
        android:id="@+id/sd_show_class"
        android:layout_width="278dp"
        android:layout_height="80dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="56dp"
        android:text="See the classes"
        android:background="@drawable/custom_button"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sd_regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sd_vid" />
</androidx.constraintlayout.widget.ConstraintLayout>