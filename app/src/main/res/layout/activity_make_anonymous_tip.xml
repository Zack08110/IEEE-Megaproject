<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeAnonymousTip">

    <EditText
        android:id="@+id/city_state_tip"
        android:layout_width="259dp"
        android:layout_height="60dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="City name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/subject_tip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_the_police" />

    <EditText
        android:id="@+id/tip_description"
        android:layout_width="359dp"
        android:layout_height="353dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Tip description"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_tip" />

    <EditText
        android:id="@+id/subject_tip"
        android:layout_width="259dp"
        android:layout_height="60dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Subject of Tip"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tip_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_state_tip" />

    <TextView
        android:id="@+id/call_the_police"
        android:layout_width="413dp"
        android:layout_height="94dp"
        android:layout_marginBottom="46dp"
        android:text="calling police"
        app:layout_constraintBottom_toTopOf="@+id/city_state_tip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="260dp"
        android:text="Save"
        app:layout_constraintBottom_toTopOf="@+id/city_state_tip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_the_police" />

</androidx.constraintlayout.widget.ConstraintLayout>